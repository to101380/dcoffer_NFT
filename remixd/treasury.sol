interface IERC20 {    
    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address to, uint256 amount) external returns (bool); 
    function burnFrom(address account, uint256 amount) external;     
}






contract bigTreasury{
    using SafeMath for uint;

    IERC20 dcf = IERC20(0xC77f56De066fE50C3e1564bA1cec85aC0aD663cE);
    
    address owner;
    uint profitRate;
    uint profitSharing;
    uint treasury;
    uint tax;
    
    

    modifier onlyOwner() {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }


    constructor(){
        owner = msg.sender; 
        profitRate = 500;
        tax = 10;        
    }

    

    function payment()external payable{
        require(msg.value > 0);  
        allocation();      
    }  



    function subscribe()external payable{
        require(msg.value >= 1e16);
        uint price = dcfPrice();        
        uint dcf_amount = uint(1e18).mul(msg.value).div(price);
        uint fee = dcf_amount.mul(tax).div(1000);
        dcf_amount = dcf_amount.sub(fee);

        dcf.transfer(msg.sender,dcf_amount);
        allocation();
    }


    function allocation()private{
        uint profit = msg.value.mul(profitRate).div(1000);        
        profitSharing = profitSharing.add(profit);
        treasury = treasury.add(msg.value.sub(profit));
    }

     


    //----withdraw

    function sell(uint dcf_amount)external{
       require(dcf.balanceOf(msg.sender) >= dcf_amount);
       uint price = dcfPrice();
       uint eth_amount = dcf_amount.mul(price).div(1e18);  
       uint fee = eth_amount.mul(tax).div(1000);

       
       eth_amount = eth_amount.sub(fee);    

       payable(msg.sender).transfer(eth_amount);
       profitSharing = profitSharing.sub(eth_amount);

       burn(dcf_amount);
    }



    

    function dcfPrice()public view returns(uint){        
        uint dcfTotlaSupply = dcf.totalSupply();
        uint price = uint(1e18).mul(profitSharing).div(dcfTotlaSupply);
        return price;
    }

    function burn(uint dcf_amount)private{
        dcf.burnFrom(msg.sender,dcf_amount);
    }


    // -----------------------------admin

    function publicWorks()external onlyOwner{
        payable(owner).transfer(treasury);
        treasury = 0; 
    }



}